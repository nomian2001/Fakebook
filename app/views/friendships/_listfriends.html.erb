<div class="friendship mt-5 listfriends">
    <div class="card">
        <div class="card-header">
            <h5>List Friends</h5>
        </div>
        <div class="card-body">
            <div class="profile-container">
                <% user.friendships.each do |friendship|  %>
                    <div class="profile d-flex align-items-center">
                        <div class="d-flex info-profile">
                            <div class="d-flex justify-content-center align-items-center">
                                <%= image_tag "user.png",width:40,height:40 %>
                            </div>
                            <div class="d-flex flex-column ms-3 justify-content-center">
                            <p class="name-profile"><%= friendship.friend.username %> </p>
                            <p class="email-profile"><%= friendship.friend.email %></p>
                            </div>
                        </div>
                        <% if user.id == current_user.id%>
                        <div class="remove-btn d-flex flex-column justify-content-center ms-2"><%= link_to "Remove", friendship, method: :delete %></div>
                        <% end %>
                    </div>
                <%end %>
            </div>
        </div>
    </div>
</div>