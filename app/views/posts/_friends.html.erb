<div class="friendship container-fluid">
    <div class="card">
        <div class="card-header">
            <h5>Add to follow</h5>
        </div>
        <div class="card-body">
            <div class="profile-container">
                <% @users.each do |user|  %>
                    <div class="profile d-flex">
                        <div class="d-flex info-profile">
                            <div class="d-flex justify-content-center align-items-center">
                                <%= image_tag "user.png",width:40,height:40 %>
                            </div>
                            <div class="d-flex flex-column ms-3 justify-content-center">
                            <p class="name-profile"><%= user.username %> </p>
                            <p class="email-profile"><%= user.email %></p>
                            </div>
                        </div>
                        <div class="follow-btn"><%= link_to "Add", friendships_path(:friend_id => user), :method => :post %></div>
                    </div>
                <%end %>
            </div>
        </div>
    </div>
</div>