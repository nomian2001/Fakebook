<div class="d-flex justify-content-center mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "sign-up-form d-flex flex-column align-items-center"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="form-title forget-password">Forgot your password?</h2>

    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="actions d-flex flex-row-reverse btn-form-group">
      <%= f.submit "Send request", class: "btn btn-success" %>
    </div>

    <div class="alert-login">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
  
  
</div>
